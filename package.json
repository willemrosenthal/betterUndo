{
  "name": "betterundo",
  "displayName": "BetterUndo",
  "description": "Improved developer experiance for undoing large sections of code",
  "version": "0.0.3",
  "publisher": "WillemRosenthal",
  "engines": {
    "vscode": "^1.93.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "betterundo.undoPressed",
        "title": "Undo Pressed"
      },
      {
        "command": "betterundo.setVolume",
        "title": "Set BetterUndo Volume"
      },
      {
        "command": "betterundo.setDelay",
        "title": "Set BetterUndo Delay - (time before betterUndo is triggered)"
      }
    ],
    "keybindings": [
      {
        "command": "betterundo.undoPressed",
        "key": "ctrl+z",
        "mac": "cmd+z",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "BetterUndo",
      "properties": {
        "betterundo.volume": {
          "type": "number",
          "default": 0.4,
          "minimum": 0,
          "maximum": 1,
          "description": "Set the volume for the undo sound (0 to 1)"
        },
        "betterundo.assistanceDelay": {
          "type": "number",
          "default": 0.8,
          "minimum": 0,
          "maximum": 5,
          "description": "Set the delay (in seconds) before Better Undo is triggered ( default: 0.8, max: 5 )"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/BetterUndo.git"
  },
  "license": "MIT",
  "files": [
    "dist",
    "src/yakety-sax.mp3"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "node esbuild.js --production",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "create-vsix": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/play-sound": "^1.1.2",
    "@types/vscode": "^1.93.1",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "play-sound": "^1.1.6"
  }
}
